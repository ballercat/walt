  StringIterator
} from '../walt/string';

function countCharacter(ptr: i32, character: i32) : i32 {
  const iterator: StringIterator = getStringIterator(ptr);
  let result: i32 = 0;

  stringNext(iterator);
  while(iterator.done == false) {
    if (iterator.value == character) {
      result += 1;
    }
    stringNext(iterator);
  }

  return result;
}

